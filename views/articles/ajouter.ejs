<% layout ("../base") -%>

<div style="margin-top: 100px;">
    <h1 style="text-align: center;">Ajouter un Article</h1>
        <% if (error) { %>
            <div class="p-3 mb-2 bg-danger text-white">
                <% for (e of error ) { %>
                    <p><%= e.msg   %></p>
                <% } %>
            </div>
        <% } %>
    <form  action="/articles" method="POST">
        <div class="form-group">
            <label for="nom">Nom</label>
            <input type="text" class="form-control" name="nom" id="nom" placeholder="Ex: Air max 95">
        </div>
        <div class="form-group">
            <label for="type">Type</label>
            <input type="text" class="form-control" id="type" name="type" placeholder="Ex: Chaussures">
        </div>
        <div class="form-group">
            <label for="prix">Prix en usd</label>
            <input type="text" class="form-control" id="prix" name="prix" placeholder="Ex: 50 ">
        </div>
        <div class="form-group">
            <label for="marque">Marque</label>
            <input type="text" class="form-control" id="marque" name="marque" placeholder="Ex: Nike">
        </div>
        <div class="form-group">
            <label for="quantite">Quantite</label>
            <input type="text" class="form-control" id="quantite" name="quantite" placeholder="Ex: 10">
        </div>
        <div class="form-group">
            <label for="taille">Taille</label>
            <input type="text" class="form-control" id="taille" name="taille" placeholder="Ex: 41">
        </div>
        <div class="form-group">
            <input type="submit" class="form-control btn btn-primary" value="Ajouter" placeholder="Ex: Chaussures">
        </div>
    </form>
</div>